@page
@model sacramentMeetingApp.Pages.Units.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Unit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Unit.UnitID" />
            <div class="form-group">
                <label asp-for="Unit.UnitName" class="control-label"></label>
                <input asp-for="Unit.UnitName" class="form-control" />
                <span asp-validation-for="Unit.UnitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit.UnitType" class="control-label"></label>
                <select asp-for="Unit.UnitType" asp-items="@Html.GetEnumSelectList<UnitType>()" class="form-select"></select>
                <span asp-validation-for="Unit.UnitType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
